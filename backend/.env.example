## Environment configuration for the backend application
## Copy this file to .env and fill in your actual API keys

# OpenRouter API Key (Primary AI Provider)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Google Gemini API Key (Fallback AI Provider)
GEMINI_API_KEY=your_gemini_api_key_here

# Database URL
DATABASE_URL=sqlite:///chat.db

# Flask Environment
FLASK_ENV=production

# Optional: Site URL for OpenRouter rankings
SITE_URL=http://localhost:5000

# Optional: Site name for OpenRouter rankings
SITE_NAME=CGT AI Chat App
